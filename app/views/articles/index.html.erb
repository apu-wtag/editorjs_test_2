<% content_for :title, "Articles" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Articles</h1>
    <%= link_to "New article", new_article_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <br>
  <div id="articles" class="min-w-full space-y-6">
    <% if @articles.any? %>

      <% @articles.each do |article| %>
        <div class="p-6 bg-white border border-gray-200 rounded-lg shadow-sm group">
          <div class="flex justify-between items-center">

          <span class="text-xs font-semibold tracking-wide text-blue-600">
            <%= article.topic.name.upcase %>
          </span>

            <div class="flex space-x-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <%= link_to "Show", article, class: "rounded-md px-3 py-1.5 text-sm bg-gray-100 hover:bg-gray-200 font-medium" %>
              <%= link_to "Edit", edit_article_path(article), class: "rounded-md px-3 py-1.5 text-sm bg-gray-100 hover:bg-gray-200 font-medium" %>
              <%= button_to "Destroy", article, method: :delete, class: "rounded-md px-3 py-1.5 text-sm text-white bg-red-600 hover:bg-red-500 font-medium", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>

          <%= link_to article_path(article), class: "block mt-2" do %>
            <h2 class="text-2xl font-bold tracking-tight text-gray-900 group-hover:text-gray-700">
              <%= article.title %>
            </h2>
          <% end %>

          <p class="mt-3 text-base text-gray-600">
            <%= extract_summary_from_editorjs(article.content, length: 200) %>
          </p>
        </div>
      <% end %>

    <% else %>
      <p class="text-center my-10">No articles found.</p>
    <% end %>
  </div>
  <br>
</div>
